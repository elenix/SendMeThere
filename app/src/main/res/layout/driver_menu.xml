<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#7b1113"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".driver_menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dashboard"
        android:id="@+id/textViewDashboard"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFF00"
        android:textSize="30dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/request_list"
        android:id="@+id/allRequests"
        android:layout_below="@+id/textViewDashboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/response"
        android:id="@+id/button_test1"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/allRequests"
        android:layout_alignLeft="@+id/allRequests"
        android:layout_alignStart="@+id/allRequests" />

</RelativeLayout>